        layer_2 {
            display-name = "RNAV";
            bindings = <
            //╭───────┬───────┬───────┬───────┬───────┬───────╮  ╭──────────────────────────┬──────────────────────────┬───────────────────────────┬───────────────────────────┬───────────────────────────┬──────────────────────────╮
